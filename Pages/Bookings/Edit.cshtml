@page
@model FinalProject.Pages.Bookings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.BookingID" />
            <div class="form-group">
                <label asp-for="Booking.UserID" class="control-label"></label>
                <select asp-for="Booking.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Booking.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.FlightID" class="control-label"></label>
                <select asp-for="Booking.FlightID" class="form-control" asp-items="ViewBag.FlightID"></select>
                <span asp-validation-for="Booking.FlightID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.SeatID" class="control-label"></label>
                <select asp-for="Booking.SeatID" class="form-control" asp-items="ViewBag.SeatID"></select>
                <span asp-validation-for="Booking.SeatID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.BookingDate" class="control-label"></label>
                <input asp-for="Booking.BookingDate" class="form-control" />
                <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
