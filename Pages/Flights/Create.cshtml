@page
@model FinalProject.Pages.Flights.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Flight.Number" class="control-label"></label>
                <input asp-for="Flight.Number" class="form-control" />
                <span asp-validation-for="Flight.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.AirlineID" class="control-label"></label>
                <select asp-for="Flight.AirlineID" class ="form-control" asp-items="ViewBag.AirlineID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Flight.DepartureInfoID" class="control-label"></label>
                <select asp-for="Flight.DepartureInfoID" class ="form-control" asp-items="ViewBag.DepartureInfoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Flight.ArrivalInfoID" class="control-label"></label>
                <select asp-for="Flight.ArrivalInfoID" class ="form-control" asp-items="ViewBag.ArrivalInfoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Flight.Price" class="control-label"></label>
                <input asp-for="Flight.Price" class="form-control" />
                <span asp-validation-for="Flight.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
