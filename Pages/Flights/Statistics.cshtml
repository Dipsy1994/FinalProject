@page
@model FinalProject.Pages.Flights.StatisticsModel

@{
    ViewData["Title"] = "Flight Statistics";
}

<h1>Statistics</h1>

<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Total Flights
        <span class="badge badge-primary badge-pill">@Model.TotalFlights</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Total Users
        <span class="badge badge-primary badge-pill">@Model.TotalUsers</span>
    </li>
</ul>
