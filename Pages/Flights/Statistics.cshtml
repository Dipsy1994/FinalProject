@page
@model FinalProject.Pages.Flights.StatisticsModel

@{
    ViewData["Title"] = "Phoenix Airline Statistics";
}

<h1 class="text-center mb-4">Phoenix Airline Statistics</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Statistics Overview</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Flights
                        <span class="badge badge-info badge-pill">@Model.TotalFlights</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Users
                        <span class="badge badge-info badge-pill">@Model.TotalUsers</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Bookings
                        <span class="badge badge-info badge-pill">@Model.TotalBookings</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Airports
                        <span class="badge badge-info badge-pill">@Model.TotalAirports</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Cities
                        <span class="badge badge-info badge-pill">@Model.TotalCities</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Lounges
                        <span class="badge badge-info badge-pill">@Model.TotalLounges</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Seats
                        <span class="badge badge-info badge-pill">@Model.TotalSeats</span>
                    </li>
                </ul>
            </div>
