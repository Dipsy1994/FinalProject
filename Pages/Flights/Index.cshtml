@page
@model FinalProject.Pages.Flights.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].Airline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].DepartureInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].ArrivalInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Flight) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Airline.AirlineID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureInfo.DepartureInfoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalInfo.ArrivalInfoID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FlightID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FlightID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FlightID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
