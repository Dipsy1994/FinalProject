@page
@model FinalProject.Pages.Seats.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Seat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Seat.SeatID" />
            <div class="form-group">
                <label asp-for="Seat.FlightID" class="control-label"></label>
                <select asp-for="Seat.FlightID" class="form-control" asp-items="ViewBag.FlightID"></select>
                <span asp-validation-for="Seat.FlightID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seat.SeatNumber" class="control-label"></label>
                <input asp-for="Seat.SeatNumber" class="form-control" />
                <span asp-validation-for="Seat.SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seat.Class" class="control-label"></label>
                <input asp-for="Seat.Class" class="form-control" />
                <span asp-validation-for="Seat.Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seat.Availability" class="control-label"></label>
                <input asp-for="Seat.Availability" class="form-control" />
                <span asp-validation-for="Seat.Availability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
