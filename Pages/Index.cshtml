@page
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<!-- Carousel -->
<div id="carouselExampleIndicators" class="carousel slide mt-4" data-ride="carousel" data-interval="3500">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="../images/paris_pic.jpg" class="d-block w-100" alt="Paris skyline with Eiffel Tower" loading="lazy" />
            <div class="carousel-caption d-none d-md-block">
                <h5>10% Off Your Paris Adventure!</h5>
                <p>Book your stay in the heart of the city.</p>
                <a href="/Book" class="btn btn-custom">Book Now</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="../images/lounge.jpg" class="d-block w-100" alt="Elegant lounge setting" loading="lazy" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Exclusive Lounge Offers</h5>
                <p>Join us for Happy Hour every evening!</p>
                <a href="/EliteWings" class="btn btn-custom">Join Now</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="../images/city.jpg" class="d-block w-100" alt="Vibrant city scene" loading="lazy" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Explore the City!</h5>
                <p>15% off city tours and activities.</p>
                <a href="/Book" class="btn btn-custom">Book Now</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="../images/beaches.jpg" class="d-block w-100" alt="Tropical beach with palm trees" loading="lazy" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Beach Vacation Getaway!</h5>
                <p>Book a week and get a free night!</p>
                <a href="/Book" class="btn btn-custom">Book Now</a>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




<!-- Search Box -->
<div class="search-box mx-auto mt-4">
    <h4>Search for Flights</h4>
    <form action="/Books" method="GET">
        <div class="form-row">
            <div class="col">
                <input type="text" class="form-control" placeholder="Destination" aria-label="Destination" required />
            </div>
            <div class="col">
                <input type="date" class="form-control" aria-label="Departure Date" required />
            </div>
            <div class="col">
                <input type="number" class="form-control" placeholder="Passengers" aria-label="Number of Passengers" min="1" required />
            </div>
            <div class="col">
                <button type="submit" class="btn btn-custom">Search</button>
            </div>
        </div>
    </form>
</div>

<!-- City Index Cards -->
<div class="container mt-4">
    <h2 class="text-center">Start Planning Your Next Trip</h2>
    <div class="row">
        <div class="col-md-3 city-card">
            <div class="card">
                <img src="../images/weekendgetaway.jpg" class="card-img-top" alt="Weekend Getaway" />
                <div class="card-body">
                    <h5 class="card-title">Weekend Getaway</h5>
                    <p class="card-text">Book a weekend trip and get 10% off and take a break.</p>
                    <a href="/Book" class="btn btn-custom">Book Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 city-card">
            <div class="card">
                <img src="../images/familyvacation.jpg" class="card-img-top" alt="Family Package" />
                <div class="card-body">
                    <h5 class="card-title">Family Package</h5>
                    <p class="card-text">Special deals for your family!!</p>
                    <a href="/Book" class="btn btn-custom">Book Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 city-card">
            <div class="card">
                <img src="../images/businessclass.jpg" class="card-img-top" alt="business class" />
                <div class="card-body">
                    <h5 class="card-title">Business Class</h5>
                    <p class="card-text">Upgrade to Business class for a spl price!</p>
                    <a href="/EliteWings" class="btn btn-custom">Book Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 city-card">
            <div class="card">
                <img src="../images/Last-minute-frame.jpg" class="card-img-top" alt="Last Minute Offers" />
                <div class="card-body">
                    <h5 class="card-title">Last Minutre Offers</h5>
                    <p class="card-text">Immerse yourself in new adventures.</p>
                    <a href="/Book" class="btn btn-custom">Book Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<!-- Features Section -->
<div class="container mt-4">
    <h2 class="text-center">Why Fly with Us</h2>
    <div class="features">
        <div class="feature">
            <div class="feature-icon"><i class="fas fa-plane"></i></div>
            <h3>Comfortable Flights</h3>
            <p>Experience the best in air travel comfort.</p>
        </div>
        <div class="feature">
            <div class="feature-icon"><i class="fas fa-globe"></i></div>
            <h3>Global Destinations</h3>
            <p>Travel to over 100 destinations worldwide.</p>
        </div>
        <div class="feature">
            <div class="feature-icon"><i class="fas fa-clock"></i></div>
            <h3>On-Time Departures</h3>
            <p>Your time matters, and we value it.</p>
        </div>
        <div class="feature">
            <div class="feature-icon"><i class="fas fa-utensils"></i></div>
            <h3>World-Class In-Flight Services</h3>
            <p>Enjoy gourmet meals and top-notch service in the sky.</p>
        </div>
    </div>
</div>