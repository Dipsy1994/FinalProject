@page
@model FinalProject.Pages.DestinationsModel
@{
    <div class="container my-5">
        <h2 class="text-center mb-5">Find Great Fares</h2>



        <div class="row mt-5">
            <!-- Destination Card 1 -->
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card shadow-sm border-0 h-100">
                    <div class="image-container">
                        <img src="https://cdn.britannica.com/26/84526-050-45452C37/Gateway-monument-India-entrance-Mumbai-Harbour-coast.jpg?w=300" class="card-img-top" alt="Mumbai">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">Mumbai</h5>
                        <p class="card-text"><i class="bi bi-calendar"></i> 23 Feb 2025 - 25 Mar 2025</p>
                        <p class="card-text text-success"><strong>Premium from USD 6329*</strong></p>
                        <div class="mt-auto">
                            <a href="/Book" class="btn btn-primary btn-block shadow-sm">Book Now</a>
                            <a href="https://www.tripadvisor.com/Attractions-g304554-Activities-Mumbai_Maharashtra.html" class="btn btn-outline-secondary btn-block" target="_blank">Discover</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Destination Card 2 -->
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card shadow-sm border-0 h-100">
                    <div class="image-container">
                        <img src="https://media.nomadicmatt.com/2023/taipeithings.jpeg" class="card-img-top" alt="Taipei">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">Taipei</h5>
                        <p class="card-text"><i class="bi bi-calendar"></i> 15 Feb 2025 - 16 Mar 2025</p>
                        <p class="card-text text-success"><strong>Premium from USD 4588*</strong></p>
                        <div class="mt-auto">
                            <a href="/Book" class="btn btn-primary btn-block shadow-sm">Book Now</a>
                            <a href="https://www.tripadvisor.com/Attractions-g293913-Activities-Taipei.html" class="btn btn-outline-secondary btn-block" target="_blank">Discover</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Destination Card 3 -->
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card shadow-sm border-0 h-100">
                    <div class="image-container">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4b/La_Tour_Eiffel_vue_de_la_Tour_Saint-Jacques%2C_Paris_ao%C3%BBt_2014_%282%29.jpg/278px-La_Tour_Eiffel_vue_de_la_Tour_Saint-Jacques%2C_Paris_ao%C3%BBt_2014_%282%29.jpg" class="card-img-top" alt="Paris">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">Paris</h5>
                        <p class="card-text"><i class="bi bi-calendar"></i> 10 Mar 2025 - 18 Mar 2025</p>
                        <p class="card-text text-success"><strong>Premium from USD 5229*</strong></p>
                        <div class="mt-auto">
                            <a href=" /Book" class="btn btn-primary btn-block shadow-sm">Book Now</a>
                            <a href="https://www.tripadvisor.com/Tourism-g187147-Paris_Ile_de_France-Vacations.html" class="btn btn-outline-secondary btn-block" target="_blank">Discover</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .image-container {
            width: 100%;
            height: 140px; /* Set the same height for all images */
            overflow: hidden; /* Ensures that any part of the image larger than the container is hidden */
        }

            .image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Ensures the image maintains aspect ratio and fills the container */
            }
    </style>
}