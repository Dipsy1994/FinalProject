@model FinalProject.Pages.Lounges.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lounge[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lounge[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lounge[0].Airport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lounge[0].Airline)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Lounge) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Airport.AirportID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Airline.AirlineID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LoungeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LoungeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LoungeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
