@page
@model FinalProject.Pages.Airports.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Airport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Airport.AirportID" />
            <div class="form-group">
                <label asp-for="Airport.Name" class="control-label"></label>
                <input asp-for="Airport.Name" class="form-control" />
                <span asp-validation-for="Airport.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Airport.Code" class="control-label"></label>
                <input asp-for="Airport.Code" class="form-control" />
                <span asp-validation-for="Airport.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Airport.CityID" class="control-label"></label>
                <select asp-for="Airport.CityID" class="form-control" asp-items="ViewBag.CityID"></select>
                <span asp-validation-for="Airport.CityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
